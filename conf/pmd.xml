<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="Android Application Rules"
    xmlns="http://pmd.sf.net/ruleset/1.0.0" xsi:noNamespaceSchemaLocation="http://pmd.sf.net/ruleset_xml_schema.xsd"
    xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0 http://pmd.sf.net/ruleset_xml_schema.xsd">

    <description>Custom ruleset for Viber VideoConverter Android library</description>

    <rule ref="category/java/bestpractices.xml" />

    <rule ref="category/java/codestyle.xml">
        <exclude name="MethodArgumentCouldBeFinal" />
        <exclude name="ShortVariable" />
        <exclude name="ShortMethodName" />
    </rule>

    <rule ref="category/java/design.xml" >
        <exclude name="LawOfDemeter" />
    </rule>

    <rule ref="category/java/documentation.xml">
        <exclude name="CommentRequired" />
    </rule>
    <rule ref="category/java/documentation.xml/CommentSize">
        <properties>
            <property name="maxLines" value="16" />
            <property name="maxLineLength" value="120" />
        </properties>
    </rule>

    <rule ref="category/java/errorprone.xml" >
        <exclude name="BeanMembersShouldSerialize" />
    </rule>

    <rule ref="category/java/multithreading.xml">
        <exclude name="DoNotUseThreads" />
    </rule>

    <rule ref="category/java/performance.xml" />
</ruleset>
